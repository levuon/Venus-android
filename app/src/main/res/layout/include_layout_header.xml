<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:id="@+id/layout_navigation_header"
    android:background="@color/qfpay_white" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView android:background="@color/palette_gray_light"
        android:visibility="gone" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
    <RelativeLayout android:id="@+id/rl_navigation_left"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false">
        <TextView android:textSize="@dimen/typography_f15"
            android:textColor="@color/palette_orange"
            android:id="@+id/tv_navigation_header_left"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:singleLine="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <ImageView android:id="@+id/iv_navigation_header_left"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerInside" android:layout_centerVertical="true" />
    </RelativeLayout>
    <LinearLayout android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="120dp" android:minHeight="120dp"
        android:layout_centerInParent="true">
        <TextView android:textSize="@dimen/typography_f17" android:textColor="@color/palette_black_light"
            android:ellipsize="end" android:gravity="center"
            android:id="@+id/tv_naviation_title" android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:maxWidth="200dp" android:singleLine="true" />
        <ImageView android:layout_gravity="center"
            android:id="@+id/iv_title_image"
            android:visibility="gone"
            android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:layout_marginLeft="1dp" android:src="@drawable/ic_right_arrow" />
    </LinearLayout>
    <RelativeLayout android:id="@+id/rl_title_date"
        android:visibility="gone" android:layout_width="wrap_content"
        android:layout_height="match_parent" android:layout_centerInParent="true">
        <TextView android:textSize="@dimen/typography_f17"
            android:textColor="@color/palette_black_light"
            android:gravity="fill_vertical"
            android:id="@+id/tv_date" android:layout_width="wrap_content"
            android:layout_height="match_parent" android:minWidth="120dp"
            android:layout_centerHorizontal="true" />
        <ImageView android:id="@+id/iv_trade_list_down_arrow"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_down_red"
            android:layout_toRightOf="@+id/tv_date"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_navigation_right"
        android:background="@null" android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin" android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/ll_title"
        android:layout_height="match_parent" android:layout_alignParentRight="true">
        <TextView android:textSize="@dimen/typography_f15" android:textColor="@color/palette_orange"
            android:id="@+id/tv_navigation_header_right"
            android:background="@drawable/title_back_selector"
            android:visibility="visible" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:singleLine="true"
            android:layout_centerInParent="true" android:layout_centerVertical="true" />
        <ImageView android:id="@+id/iv_navigation_header_right"
            android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:scaleType="centerInside" android:layout_centerVertical="true" />
    </RelativeLayout>
    <ImageView android:id="@+id/iv_base_divider"
        android:background="@color/common_divide_line_color" android:layout_width="match_parent"
        android:layout_height="1dp" android:layout_alignParentBottom="true" />
</RelativeLayout>
