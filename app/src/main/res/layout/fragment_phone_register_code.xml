<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical" >
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="您的手机"
            android:textColor="#999999"
            android:textSize="@dimen/x13" />

        <TextView
            android:id="@+id/tv_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="18270634633"
            android:textColor="#333333"
            android:textSize="@dimen/x13" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="验证码      "
            android:textColor="#333333"
            android:textSize="@dimen/x13" />

        <EditText
            android:id="@+id/et_sms_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="true"
            android:digits="0123456789"
            android:hint="请输入短信验证码"
            android:inputType="number"
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#cccccc"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/x13" >
        </EditText>

        <ImageView
            android:id="@+id/iv_delete_sms_code"
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/x15"
            android:layout_marginRight="10dp"
            android:background="@drawable/tv_delete"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >


            <TextView
                android:enabled="false"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:id="@+id/tv_count_down"
                android:background="@drawable/selector_count_down_background"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/selector_count_down_text"/>


            <!--<TextView-->
                <!--android:id="@+id/tv_time"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="60"-->
                <!--android:textColor="#ff5723"-->
                <!--android:textSize="@dimen/x10"-->
                <!--android:visibility="gone"/>-->
            <!---->
            <!---->
            <!--<TextView-->
                <!--android:id="@+id/tv_yzm"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:text="获取验证码"-->
                <!--android:textColor="#ff5723"-->
                <!--android:textSize="@dimen/x10" />-->
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x9"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#dddddd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@android:color/white"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_login_pwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="登录密码  "
                android:textColor="#333333"
                android:textSize="@dimen/x13" />

            <EditText
                android:id="@+id/et_login_pwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:cursorVisible="true"
                android:digits="@string/pwd_digits"
                android:hint="6-20英文字母,数字及字符"
                android:inputType="textPassword"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="#333333"
                android:textColorHint="#cccccc"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/x13" />

            <ImageView
                android:id="@+id/iv_delete_passwd"
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:layout_marginRight="10dp"
                android:background="@drawable/tv_delete"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_see_passwd"
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/x15"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_invisibility" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x9"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#dddddd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@android:color/white"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="确认密码  "
                android:textColor="#333333"
                android:textSize="@dimen/x13" />

            <EditText
                android:id="@+id/et_confirm_login_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:cursorVisible="true"
                android:digits="@string/pwd_digits"
                android:gravity="center_vertical"
                android:hint="请再次输入登录密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textColor="#333333"
                android:textColorHint="#cccccc"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/x13" />

            <ImageView
                android:id="@+id/iv_delete_confirm_passwd"
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:layout_marginRight="10dp"
                android:background="@drawable/tv_delete"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_see_confirm_pwd"
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/x15"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_invisibility" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/x10" >

        <CheckBox
            android:id="@+id/checkBox1"
            android:background="@drawable/checkbox_selector"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:checked="true"
            android:button="@null"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我已阅读并同意"
            android:textColor="#999999"
            android:textSize="@dimen/x10"
            android:gravity="center_vertical"
            android:layout_marginLeft="3dp"/>
        <TextView
            android:id="@+id/tv_userprotocl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="《钱滚滚用户协议》"
            android:textColor="#fd5353"
            android:gravity="center_vertical"
            android:textSize="@dimen/x10" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x37"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_radius_grey"
        android:clickable="false"
        android:enabled="false"
        android:text="@string/register"
        android:textColor="#ffffff"
        android:textSize="@dimen/x15" />

</LinearLayout>